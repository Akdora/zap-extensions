<project name="ZAP-Extensions" default="build-all" basedir=".">
	<description>Build ZAP extensions</description>

	<property name="src" location="../src" />
	<property name="build" location="build" />
	<property name="dist" location="zap-exts" />
	<property name="dist.lib.dir" location="../lib" />
	<!-- This assumes you also have the zaproxy project -->
	<property name="zap.ext.dir" location="../../zaproxy/src/extension" />
	<property name="zap.plugin.dir" location="../../zaproxy/src/plugin" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />

		<!-- Create the build directory structure used by compile -->

		<delete dir="${dist}" includeEmptyDirs="true" />
		<delete dir="${build}" includeEmptyDirs="true" />

		<mkdir dir="${dist}" />
		<mkdir dir="${build}" />
	</target>

	<target name="compile" depends="init" description="compile the source">
		<echo message="Compiling the source..." />
		<!-- Compile the java code from ${src} into ${build} -->
		<!--javac srcdir="${src}" destdir="${build}" classpath="zap.jar"/-->
		<javac srcdir="${src}" destdir="${build}">
			<classpath>
				<fileset dir="${dist.lib.dir}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>

	</target>

	<!-- Active scanner -->
	<target name="build-activescan" depends="compile" description="build the activescan extension">
		<jar jarfile="${dist}/zap-ext-activescan.jar" update="true" compress="false">
			<zipfileset dir="${build}" prefix="">
				<include name="org/zaproxy/zap/extension/activescan/**"/>
			</zipfileset>
			<zipfileset dir="${src}" prefix="">
				<include name="org/zaproxy/zap/extension/activescan/Messages*"/>
			</zipfileset>
		</jar>
	</target>

	<target name="deploy-activescan" depends="build-activescan" description="deploy the activescan extension">
		<!-- Active scan rules go in the plugin directory-->
		<copy file="${dist}/zap-ext-activescan.jar" toDir="${zap.plugin.dir}" overwrite="true" />
	</target>

	<!-- Passive scanner -->
	<target name="build-passivescan" depends="compile" description="build the passivescan extension">
		<jar jarfile="${dist}/zap-ext-passivescan.jar" update="true" compress="false">
			<zipfileset dir="${build}" prefix="">
				<include name="org/zaproxy/zap/extension/passivescan/**"/>
			</zipfileset>
			<zipfileset dir="${src}" prefix="">
				<include name="org/zaproxy/zap/extension/passivescan/Messages*"/>
			</zipfileset>
		</jar>
	</target>

	<target name="deploy-passivescan" depends="build-passivescan" description="deploy the passivescan extension">
		<!-- Passive scan rules go in the plugin directory-->
		<copy file="${dist}/zap-ext-passivescan.jar" toDir="${zap.plugin.dir}" overwrite="true" />
	</target>

	<!-- Extension: right click message menu -->
	<target name="build-rightclickmsg" depends="compile" description="build the rightclickmsg extension">
		<jar jarfile="${dist}/zap-ext-rightclickmsg.jar" update="true" compress="false">
			<zipfileset dir="${build}" prefix="">
				<include name="org/zaproxy/zap/extension/rightclickmsg/**"/>
			</zipfileset>
			<zipfileset dir="${src}" prefix="">
				<include name="org/zaproxy/zap/extension/rightclickmsg/Messages*"/>
			</zipfileset>
		</jar>
	</target>

	<target name="deploy-rightclickmsg" depends="build-rightclickmsg" description="deploy the rightclickmsg extension">
		<copy file="${dist}/zap-ext-rightclickmsg.jar" toDir="${zap.ext.dir}" overwrite="true" />
	</target>

	<!-- Extension: top level menu -->
	<target name="build-topmenu" depends="compile" description="build the topmenu extension">
		<jar jarfile="${dist}/zap-ext-topmenu.jar" update="true" compress="false">
			<zipfileset dir="${build}" prefix="">
				<include name="org/zaproxy/zap/extension/topmenu/**"/>
			</zipfileset>
			<zipfileset dir="${src}" prefix="">
				<include name="org/zaproxy/zap/extension/topmenu/Messages*"/>
			</zipfileset>
		</jar>
	</target>

	<target name="deploy-topmenu" depends="build-topmenu" description="deploy the topmenu extension">
		<copy file="${dist}/zap-ext-topmenu.jar" toDir="${zap.ext.dir}" overwrite="true" />
	</target>

	<target name="build-all" depends="compile" description="build all of the extensions">
		<antcall target="build-activescan" />
		<antcall target="build-passivescan" />
		<antcall target="build-rightclickmsg" />
		<antcall target="build-topmenu" />
	</target>

	<target name="deploy-all" depends="build-all" description="build all of the extensions">
		<antcall target="deploy-activescan" />
		<antcall target="deploy-passivescan" />
		<antcall target="deploy-rightclickmsg" />
		<antcall target="deploy-topmenu" />
	</target>


</project>