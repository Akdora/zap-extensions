		<antcall target="deploy-addon"> <param name="addon" value="bruteforce"/> </antcall>
	</target>

	<target name="generate-wiki-bruteforce" description="Generates the wiki of bruteforce">
		<generate-wiki-core addon="bruteforce" />
	</target>
	
